<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.settings.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_bar_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.skywire.skycoin.vpn.activities.settings.SettingsOption
                android:id="@+id/optionKillSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:box_row_type="top"
                app:description="@string/tmp_options_kill_switch_description"
                app:title="@string/tmp_options_kill_switch_title" />

            <com.skywire.skycoin.vpn.activities.settings.SettingsOption
                android:id="@+id/optionResetAfterErrors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:description="@string/tmp_options_reset_after_errors_description"
                app:title="@string/tmp_options_reset_after_errors_title" />

            <com.skywire.skycoin.vpn.activities.settings.SettingsOption
                android:id="@+id/optionProtectBeforeConnecting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:description="@string/tmp_options_protect_before_connecting_description"
                app:title="@string/tmp_options_protect_before_connecting_title" />

            <com.skywire.skycoin.vpn.activities.settings.SettingsOption
                android:id="@+id/optionStartOnBoot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:box_row_type="bottom"
                app:description="@string/tmp_options_start_on_boot_description"
                app:title="@string/tmp_options_start_on_boot_title" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginTop="@dimen/top_bar_height"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/top_bar_shadow" />

    <com.skywire.skycoin.vpn.controls.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_button_icon="back"
        app:title="@string/tmp_options_title" />
</FrameLayout>
